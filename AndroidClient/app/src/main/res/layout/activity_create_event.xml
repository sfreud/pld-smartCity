<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.androidclient.CreateEventActivity">

    <TextView
        android:id="@+id/mStatusText2"
        android:text="Connexion établie\n"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/enteredEventSummary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minEms="5"
        android:hint="Titre"/>

    <EditText
        android:id="@+id/enteredEventLocation"
        android:layout_width="fill_parent"
        android:minEms="5"
        android:hint="Lieu"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/enteredEventStartDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="dd/mm/yyyy:hh::mm"/>

    <EditText
        android:id="@+id/enteredEventEndDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="dd/mm/yyyy:hh::mm"/>

    <Button
        android:id="@+id/createThisEvent"
        android:text="Créer cet évènement"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp" />

</LinearLayout>
